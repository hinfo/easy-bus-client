<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/empresas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="unifra.edu.mobile.easybus.Empresas">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="EMPRESAS DE TRANSPORTES"
        android:layout_gravity="center|fill"
        android:onClick="onClick"
        android:textColor="@color/bcgColor2Dark"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/emp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Gabardo Transportes"
        android:onClick="onClick"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/emp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Expresso Medianeira"
        android:onClick="onClick"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/emp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Transportes Salgado Filho"
        android:onClick="onClick"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/emp4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Viação Centro Oeste"
        android:onClick="onClick"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/emp5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="Expresso Dores"
        android:onClick="onClick"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/dadosEmpresa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp"
        android:textSize="15dp"/>

</LinearLayout>
