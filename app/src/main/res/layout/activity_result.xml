<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="unifra.edu.mobile.easybus.Result">

    <TextView
        android:id="@+id/titleResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/bcgColor2Dark"
        android:text="Horários"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">


        <TableRow
            android:id="@+id/head"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bcgColor2Primary">

            <TextView
                android:layout_gravity="center"
                android:layout_span="1"
                android:padding="5dip"
                android:text="Hora"
                android:textColor="@color/bcgColor2Dark"
                android:textSize="20sp" />

            <TextView
                android:layout_gravity="center"
                android:layout_span="1"
                android:padding="5dip"
                android:text="Descrição"
                android:textColor="@color/bcgColor2Dark"
                android:textSize="20sp" />

            <TextView
                android:layout_gravity="center"
                android:layout_span="1"
                android:padding="5dip"
                android:text="Direção"
                android:textColor="@color/bcgColor2Dark"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <TableLayout
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

        </TableLayout>

    </ScrollView>
</LinearLayout>
